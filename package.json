{
  "name": "ssh",
  "version": "1.0.0-beta2",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "webpack --config webpack.config.js --watch",
    "build": "webpack --config webpack.config.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "Mr_Onion",
  "license": "ISC",
  "description": "A remote SSH client based on Electron",
  "dependencies": {
    "@ant-design/icons": "^6.0.2",
    "antd": "^5.27.3",
    "electron-store": "^10.1.0",
    "https-proxy-agent": "^7.0.6",
    "iconv-lite": "^0.7.0",
    "node-ssh": "^13.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socks-proxy-agent": "^8.0.5",
    "uuid": "^13.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.2",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "electron-reloader": "^1.2.3",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^4.0.0",
    "typescript": "^5.5.2",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.mr-onion.sshclient",
    "productName": "OnionSSH",
    "copyright": "Copyright Â© 2025 ${author}",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "./avatar.png"
    },
    "nsis": {
      "license": "LICENSE"
    },
    "mac": {
      "target": "dmg",
      "icon": "./avatar.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "./avatar.png"
    }
  }
}
